# Copy this file to `.env` and fill in values as needed.

# Display/timezone and storage
DISPLAY_TZ=Australia/Melbourne
# Use separate data and logs directories inside the container
DB_PATH=/app/data/internet_status.db
LOG_DIR=/app/logs
RETENTION_DAYS=14
VACUUM_INTERVAL_RUNS=720

# Ping targets and thresholds
INTERNET_CHECK_TARGETS=8.8.8.8,1.1.1.1,9.9.9.9
FAILURE_THRESHOLD=5

# Tapo smart plug (optional)
TAPO_EMAIL=your_tapo_email@example.com
TAPO_PASSWORD=your_strong_password
TAPO_DEVICE_IP=192.168.20.20
TAPO_DEVICE_NAME="device name"
TAPO_COOLDOWN_SECONDS=3600

# Advanced (override only if needed)
# When using docker-compose, the default Redis hostname is `redis`.
REDIS_URL=redis://redis:6379/0
